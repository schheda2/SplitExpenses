<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.himanshu.splitexpenses.ShowActivity"
    android:drawable="@color/abc_background_cache_hint_selector_material_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textView_expenseDetails"
        android:id="@+id/textView_expenseDetails"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textView_name"
        android:id="@+id/textView_name"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView_expenseDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_nameResult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView_name"
        android:layout_alignLeft="@+id/textView_expenseDetails"
        android:layout_alignStart="@+id/textView_expenseDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Category"
        android:id="@+id/textView_category"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_categoryResult"
        android:layout_alignBottom="@+id/textView_category"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView_category"
        android:layout_alignLeft="@+id/textView_nameResult"
        android:layout_alignStart="@+id/textView_nameResult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Amount"
        android:id="@+id/textView_amount"
        android:layout_below="@+id/textView_category"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_amountResult"
        android:layout_alignBottom="@+id/textView_amount"
        android:layout_alignRight="@+id/textView_categoryResult"
        android:layout_alignEnd="@+id/textView_categoryResult"
        android:layout_alignTop="@+id/textView_amount"
        android:layout_alignLeft="@+id/textView_categoryResult"
        android:layout_alignStart="@+id/textView_categoryResult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Date"
        android:id="@+id/textView_date"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView_amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_dateResult"
        android:layout_alignBottom="@+id/textView_date"
        android:layout_alignLeft="@+id/textView_amountResult"
        android:layout_alignStart="@+id/textView_amountResult"
        android:layout_alignTop="@+id/textView_date"
        android:layout_alignRight="@+id/textView_amountResult"
        android:layout_alignEnd="@+id/textView_amountResult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Receipt"
        android:id="@+id/textView_receipt"
        android:layout_below="@+id/textView_dateResult"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView_receipt"
        android:layout_alignRight="@+id/textView_expenseDetails"
        android:layout_alignEnd="@+id/textView_expenseDetails"
        android:layout_alignLeft="@+id/textView_dateResult"
        android:layout_alignStart="@+id/textView_dateResult" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Finish"
        android:id="@+id/button_finish"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_previous"
        android:layout_alignBottom="@+id/button_finish"
        android:layout_toLeftOf="@+id/textView_receipt"
        android:layout_alignTop="@+id/button_finish"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:src="@drawable/previous" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_next"
        android:layout_alignBottom="@+id/button_finish"
        android:layout_toRightOf="@+id/button_finish"
        android:layout_alignTop="@+id/button_finish"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:src="@drawable/next" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_first"
        android:layout_alignBottom="@+id/imageButton_previous"
        android:layout_alignTop="@+id/imageButton_previous"
        android:layout_toRightOf="@+id/textView_date"
        android:layout_alignRight="@+id/textView_category"
        android:layout_alignEnd="@+id/textView_category"
        android:src="@drawable/first" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_last"
        android:layout_alignBottom="@+id/imageButton_next"
        android:layout_alignTop="@+id/imageButton_next"
        android:layout_toRightOf="@+id/imageButton_next"
        android:src="@drawable/last"
        android:drawable="@color/abc_background_cache_hint_selector_material_light"
        android:background="@drawable/abc_cab_background_internal_bg" />


</RelativeLayout>
